@model PastryShop.ViewModel.PieListViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Pie Shop</title>
</head>
<body>
<h1>@Model.CurrentCategory</h1>
@foreach(var Pie in Model.Pies)
{
    <div>
        <h2>@Pie.Name</h2>
        <h3>@Pie.Price.ToString("C")</h3>
        <h4>@Pie.Category.Description</h4>
    </div>
}
</body>
</html>